<%= form action: rodauth.reset_password_path, method: :post, class: "md:max-w-xl" do |f| %>
  <%= f.inputs do %>
    <%= f.input :password, name: rodauth.password_param, label: "New Password", autocomplete: rodauth.password_field_autocomplete_value, required: true, error: rodauth.field_error(rodauth.password_param) %>
    <%= f.input :password, name: rodauth.password_confirm_param, label: "Confirm New Password", autocomplete: "new-password", required: true, error: rodauth.field_error(rodauth.password_confirm_param) %>
  <% end %>

  <%= f.inputs inputs_wrapper: :sidebyside_actions, wrapper: :default do %>
    <%= f.button rodauth.reset_password_button %>
  <% end %>
<% end %>
