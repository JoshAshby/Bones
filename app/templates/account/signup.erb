<%= form action: rodauth.create_account_path, method: :post, class: "md:max-w-xl" do |f| %>
  <%= f.inputs do %>
    <%= f.input :text, name: :username, label: "User Name", required: true, autocomplete: "username", error: rodauth.field_error(:username) %>
    <%= f.input :email, name: rodauth.login_param, label: "Email", required: true, autocomplete: "email", error: rodauth.field_error(rodauth.login_param) %>
    <%= f.input :password, name: rodauth.password_param, label: "Password", required: true, autocomplete: rodauth.password_field_autocomplete_value, error: rodauth.field_error(rodauth.password_param) %>
    <%= f.input :password, name: rodauth.password_confirm_param, label: "Confirm Password", required: true, autocomplete: "new-password", error: rodauth.field_error(rodauth.password_confirm_param) %>
  <% end %>

  <%= f.inputs inputs_wrapper: :sidebyside_actions, wrapper: :default do %>
    <%= f.button rodauth.create_account_button %>
  <% end %>
<% end %>
