<%= form action: rodauth.change_password_path, method: :post, class: "md:max-w-xl" do |f| %>
  <%= f.inputs do %>
    <%= f.input :password, name: rodauth.password_param, label: "Current Password", required: true, autocomplete: rodauth.password_field_autocomplete_value, error: rodauth.field_error(rodauth.password_param) %>
    <%= f.input :password, name: rodauth.new_password_param, label: "New Password", required: true, autocomplete: "new-password", error: rodauth.field_error(rodauth.new_password_param) %>
    <%= f.input :password, name: rodauth.password_confirm_param, label: "Confirm New Password", required: true, autocomplete: "new-password", error: rodauth.field_error(rodauth.password_confirm_param) %>
  <% end %>

  <%= f.inputs inputs_wrapper: :sidebyside_actions, wrapper: :default do %>
    <%= f.button rodauth.change_password_button %>
  <% end %>
<% end %>
