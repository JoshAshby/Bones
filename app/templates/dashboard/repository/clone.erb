<%= form @form, method: :post, action: "/dashboard/repository/clone", class: "md:max-w-xl" do |f| %>
  <%= f.inputs legend: "Repository Information", legend_sub: "Required settings for your clone." do %>
    <%= f.input :name, type: :text, label: "Repository Name", required: true %>
    <%= f.input :clone_url, type: :url, label: "Repository Clone URL", required: true %>
  <% end %>

  <%= f.inputs legend: "Optional Settings", legend_sub: "Additional settings for configuring your clone." do %>
    <%= f.input :password, type: :password, label: "Admin Password", help: "Leave this blank to have a password autogenerated." %>
  <% end %>

  <%= f.inputs inputs_wrapper: :sidebyside_actions, wrapper: :default do %>
    <%= f.button "Clone" %>
  <% end %>
<% end %>
