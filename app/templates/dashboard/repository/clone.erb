<%= form @form, { method: :post, action: "/dashboard/repository/clone" }, { config: :sidebyside } do |f| %>
  <%= f.input :name, type: :text, label: "Repository Name", required: true %>
  <%= f.input :clone_url, type: :url, label: "Repository Clone URL", required: true %>

  <%= f.input :password, type: :password, label: "Admin Password", help: "Leave blank to have a password autogenerated" %>

  <%= f.button "Clone Repository" %>
<% end %>
