<div class="w-full border-t-4 border-steelblue-600 flex flex-col h-screen bg-cover" style="background-image: url('/landing_page_bg.jpg');">
  <div>
    <header class="flex flex-col px-8 py-2 flex-grow">
      <nav class="flex items-center justify-between">
        <%= render :_logo %>
      </nav>
    </header>
  </div>

  <div class="mt-20 mx-8">
    <div class="md:flex items-center justify-between">
      <div class="w-full mr-auto md:max-w-md">
        <h2 class="text-2xl font-bold text-gray-800 tracking-wide">Hello</h2>
        <p class="text-gray-800">
          Bones is a light weight, no-fuss Fossil-SCM host.
        </p>
        <% if Features.enabled? :sign_up %>
          <span class="text-gray-800">New Around Here?<a href="/account/create" class="text-palevioletred-600 text-lg ml-2 font-bold">Sign Up!</a></span>
        <% else %>
          <span class="text-gray-800">Bones is currently in a limited private alpha while we get things setup, but check back soon for more news on a public launch!</a></span>
        <% end %>
      </div>

      <div class="w-full mt-6 md:max-w-md">
        <div class="bg-white shadow-md rounded-lg px-4 py-4 mb-6">
          <%= form action: rodauth.login_path, method: :post do |f| %>
            <div class="flex items-center justify-center">
              <h2 class="text-2xl font-bold tracking-wide">Welcome Back</h2>
            </div>
            <h3 class="text-xl text-center font-semibold text-gray-800 mb-2">Please Log In</h3>
  
            <%= f.inputs do %>
              <%= f.input :email, name: rodauth.login_param, label: "Email" %>
              <%= f.input :password, name: rodauth.password_param, label: "Password" %>
            <% end %>

            <%= f.inputs inputs_wrapper: :sidebyside_actions, wrapper: :default do %>
              <a href="<%= rodauth.reset_password_request_path %>" class="text-gray-600 hover:text-gray-800">Forget your Password?</a>
              <%= f.button rodauth.login_button %>
            <% end %>
          <% end %>
        </div>

        <%= cell(Cells::Flashes, flash).list %>
      </div>
    </div>
  </div>

  <div class="flex-grow"></div>

  <footer class="px-4 py-6">
    <p class="text-sm text-gray-600 text-center">
    Â© Joshua Ashby 2020 - <a href="/credits">Credits</a>
    |
    <span>Photo by <a href="https://unsplash.com/@bmeliti">Brett Meliti</a></span>
    |
    <a href="https://thenounproject.com/term/dinosaur-skull/347287/">dinosaur skull by Erik Kuroow</a>
    </p>
  </footer>
</div>
