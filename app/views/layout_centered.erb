<body class="o-body__container flex-col">
  <div class="w-full border-t-4 border-steelblue-600 flex flex-col">
    <header class="content px-8 py-2 flex-grow bg-brand">
      <nav class="flex items-center justify-between">
        <%= render :_logo %>
        <% unless rodauth.logged_in? %>
        <div class="flex items-center">
          <a href="/account/create" class="mx-1 py-2 px-3 rounded border-2 border-transparent text-steelblue-50 hover:border-steelblue-300">Sign up</a>
          <a href="/account/login" class="mx-1 py-2 px-3 rounded border-2 border-steelblue-600 text-steelblue-50 hover:border-steelblue-300">Log in</a>
        </div>
        <% end %>
      </nav>
    </header>
  </div>

  <div class="h-6"></div>

  <div class="mx-auto">
    <%= render :_flashes %>
    <%= yield %>
  </div>

  <div class="flex-grow"></div>
  <footer class="o-footer__container">
    <div class="m-footer__content">
      <p class="a-footer__text">
